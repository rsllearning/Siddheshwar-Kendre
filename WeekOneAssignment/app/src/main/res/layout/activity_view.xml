<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewActivity">

    <Button
        android:background="#FF0000"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/robotoblackitalic"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:textStyle="bold"
        android:maxLines="1"
        android:minLines="1"
        android:text="This is a text view This is a text view This is a text view"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Alphanumeric value"
        android:layout_gravity="center"
        android:autoSizeTextType="uniform"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        android:inputType="text" />

    <EditText
        android:id="@+id/ed_search_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:minWidth="200dp"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:textColor="@color/white"
        android:hint="Search Here"
        android:imeActionLabel="Search"
        android:layout_gravity="center_horizontal">
    </EditText>


    <ImageView
        android:id="@+id/image_view_asset"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/blue"
        android:layout_gravity="center"

        />

</LinearLayout>